<div style="text-align: center; padding: 20px; background-color: #976eb5; color: white;">
  <h2><%= gettext("A new offer has been created!") %></h2>
</div>
<div style="padding: 20px; font-size: 16px; background-color: rgb(225,225,225);">
  <h4><%= gettext("Title") %>: <%= @offer.title %></h4>
  <p><%= gettext("Company") %>: <%= @offer.company %></p>
  <hr />
  <p><%= gettext("Summary") %>: <%= @offer.summary %></p>
  <p><%= gettext("Location") %>: <%= @offer.location %></p>
  <p><%= gettext("URL") %>: <a href="<%= @offer.url %>" target="_blank"><%= @offer.url %></a></p>
  <hr />
  <p><%= gettext("Place") %>: <%= HumanizeHelper.human_get_place(@offer.district, gettext("Unknown")) %></p>
  <p><%= gettext("Type") %>: <%= HumanizeHelper.human_get_type(@offer.flat_type, gettext("Unknown")) %></p>
  <hr />
  <p><%= gettext("Contact E-mail") %>: <%= @offer.contact_email %></p>
  <hr />
  <%= link(gettext("View Offer"), to: ElixirJobsWeb.Router.Helpers.admin_offer_url(ElixirJobsWeb.Endpoint, :edit, @offer.slug)) %>
</div>
